{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="mb-4">
            <a href="{{ path('user_profile') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Retour au profil
            </a>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h1 class="h3 mb-4">Modifier mon profil</h1>

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}

                        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.name, {'label': 'Prénom'}) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.lastname, {'label': 'Nom'}) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.email, {'label': 'Email'}) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.pseudo, {'label': 'Pseudo'}) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.password, {'label': 'Nouveau mot de passe (laisser vide pour ne pas changer)'}) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.phone, {'label': 'Numéro de téléphone'}) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.bio, {'label': 'Biographie'}) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.birthday, {'label': 'Date de naissance'}) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.country, {'label': 'Pays'}) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.photo, {'label': 'URL de la photo de profil'}) }}
                            </div>

                            <div class="d-grid">
                                {{ form_row(form.submit, {'label': 'Enregistrer les modifications', 'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 